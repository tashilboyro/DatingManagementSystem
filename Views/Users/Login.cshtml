@model DatingManagementSystem.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h4 class="text-primary text-center">Login</h4>
        <hr />
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="Enter Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary rounded-pill shadow-sm fw-bold">Login</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <p>Don't have an account? <a asp-action="Create" class="text-primary fw-bold">Sign Up</a></p>
</div>
