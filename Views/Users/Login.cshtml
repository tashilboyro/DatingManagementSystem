@model DatingManagementSystem.Models.User

@{
    ViewData["Title"] = "Login";
}

<link href="~/css/Login.css" rel="stylesheet" />


<div class="container">
    <div class="login-card">
        <h3>Welcome to LoveBirds !</h3>
        <form asp-action="Login" method="post">
            <div class="email">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="Enter Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="password">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="login-btn">
                <button type="submit" class="btn btn-primary rounded-pill shadow-sm fw-bold">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["LoginError"]?.ToString() == "true")
        {
            <text>
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Wrong email or password!',
                            confirmButtonColor: '#3085d6'
                        });
            </text>
        }

        @if (TempData["LogoutSuccess"]?.ToString() == "true")
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Logout Successful!',
                            text: 'You have been successfully logged out.',
                            confirmButtonColor: '#3085d6'
                        });
            </text>
        }
    </script>
}